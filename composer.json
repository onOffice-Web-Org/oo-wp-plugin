{
    "config": {
        "platform": {
            "php": "8.0"
        }
    },
	"require-dev": {
		"phpunit/phpunit": "^9.6",
		"phpstan/phpstan": "*",
		"php-coveralls/php-coveralls": "^2.7",
		"symfony/process": "^5.4",
        "phpcompatibility/php-compatibility": "*",
		"wp-cli/i18n-command": "*",
        "ext-xdebug": "*",
        "yoast/phpunit-polyfills": "^4.0"

    "prefer-stable" : true,
	"autoload": {
		 "psr-4": {
			"onOffice\\SDK\\": "SDK/src/",
			"onOffice\\WPlugin\\": "plugin/"
		}
	},
	"autoload-dev": {
		 "psr-4": {
			"onOffice\\tests\\": "tests/"
		}
	},
	"require": {
		"php": ">=8.0.0",
		"php-di/php-di": "^7.1",
		"ext-curl": "*",
		"select2/select2": "^4.0",
		"erusev/parsedown": "^1.7",
        "mjaschen/phpgeo": "^4.0",
        "orchidjs/tom-select": "^2.4"
	}
